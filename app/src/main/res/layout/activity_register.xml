<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_above="@id/emailinreg"
        android:id="@+id/login_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/round_corner"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/emailinreg"
        android:inputType="textEmailAddress"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:maxLines="1"
        android:background="@drawable/round_corner"
        android:elevation="10dp"
        android:hint="Email"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:gravity="center"/>
    <EditText
        android:id="@+id/passinreg"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/round_corner"
        android:elevation="10dp"
        android:hint="Password"
        android:maxLines="1"
        android:layout_marginTop="25dp"
        android:layout_below="@id/emailinreg"
        android:gravity="center"/>
    <Button
        android:id="@+id/registerbutton"
        android:layout_width="180dp"
        android:layout_below="@+id/passinreg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="REGISTER"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/loginreg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_weight="1"
            android:layout_marginBottom="6dp"
            android:elevation="0dp"
            android:background="@drawable/round_button" />
        <Button
            android:id="@+id/guestinreg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="GuestMode"
            android:layout_marginBottom="6dp"
            android:background="@drawable/round_button"
            android:onClick="guestMode"/>

    </LinearLayout>


</RelativeLayout>